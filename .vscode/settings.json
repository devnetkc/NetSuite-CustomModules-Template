  "files.exclude": {
    /*    "ns_npm_repository/**": true,
    "package-lock.json": true,
    ".nsdeploy": true,
    "node_modules/**": true,
    "payload.json": true,
    "coverage": true,
    "jest.config.js": true,
    "*prettierignore": true,
    ".jshintrc": true,
    ".prettierrc.json": true,
